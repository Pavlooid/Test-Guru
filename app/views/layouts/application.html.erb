<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class="nav user"><%= t('general.welcome_user', user: current_user.email) %>
        <%= link_to t('general.guru'), about_path %> | 
        <%= link_to t('general.exit'), destroy_user_session_path, method: :delete %>
      </p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>
  </body>
</html>
