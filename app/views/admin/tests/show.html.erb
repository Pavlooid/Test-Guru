<h1><%= t('.header', title: @test.title) %></h1>

<p>
  <%= link_to t('.add_question'), new_admin_test_question_path(@test) %> |
  <%= link_to t('.edit'), edit_admin_test_path(@test) %> |
  <%= link_to t('general.tests'), admin_tests_path %>
</p>

<p><strong><%= t('.category') %></strong><%= @test.category.title %></p> 
<p><strong><%= t('.level') %></strong><%= @test.level %></p>
<p><strong><%= t('.author') %></strong><%= @test.author.email %></p>

<p><strong><%= t('.questions') %></strong></p>
<% if @test.questions.empty? %>
  <p><%= t('.no_questions') %></p>
<% else %>
<table>
  <tr>
    <th><%= t('.id') %></th>
    <th><%= t('.title') %></th>
    <th><%= t('.question') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.title %></td>
      <td><%= question.question %></td>
      <td><%= link_to t('general.question'), admin_question_path(question) %></td>
      <td><%= link_to t('general.change'), edit_admin_question_path(question) %></td>
      <td>
        <%= link_to t('general.delete'),
                    admin_question_path(question),
                    method: :delete,
                    data:   { confirm: t('general.confirm') } %>
    </tr>
  <% end %>
</table>
<% end %>
