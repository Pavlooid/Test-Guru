<h2><%= t('.header') %></h2>

<p>
<%= link_to t('.new_test'), new_admin_test_path %>
</p>

<%= render 'shared/errors', resource: @test %>

<table class="table text-center align-middle">
  <tr>
    <th class="sort-by-column pointer">
      <%= t('tests.index.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success' %>
    </th>
    <th><%= t('tests.index.level') %></th>
    <th><%= t('tests.index.question_count') %></th>
    <th><%= t('tests.index.timer') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>

  <%= render @tests %>
</table>
