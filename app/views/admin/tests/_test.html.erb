<tr>
  <td class='align-middle column'>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class='align-middle text-center'><%= test.level %></td>
  <td class='align-middle text-center'><%= test.questions.count %></td>
  <td class='align-middle text-center'><%= link_to t('general.test'), admin_test_path(test) %></td>
  <td class='align-middle text-center'>
    <%= link_to t('general.change'),
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: 'form-inline-link' %> 
  </td>
  <td class='align-middle text-center'>
    <%= link_to t('general.delete'),
                admin_test_path(test),
                method: :delete,
                data:   { confirm: t('general.confirm') } %>
  </td>
</tr>
