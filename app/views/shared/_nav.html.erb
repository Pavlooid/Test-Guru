  <%= link_to t('general.guru'), about_path, class: "navbar-brand" %>

  <span class="navbar-text position-absolute top-0 end-0">
    <% if user_signed_in? %>
      <%= t('general.welcome_user', user: current_user.email) %> |
      <% if current_user.is_a?(Admin) %>
      <%= link_to t('general.admin_bar'), admin_tests_path %> |
